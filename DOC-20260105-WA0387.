import React, { useState } from 'react';
import { Users, UserCog, FolderOpen, Calendar, History, Camera, Wifi, Lock, ChevronLeft, Plus, Eye, EyeOff, CheckCircle, Clock, XCircle, AlertCircle, Settings } from 'lucide-react';

export default function TechInstallApp() {
  const [userRole, setUserRole] = useState('technicien'); // 'coordinateur' ou 'technicien'
  const [currentView, setCurrentView] = useState('dashboard'); // dashboard, dossiers, equipes, historique
  const [selectedDate, setSelectedDate] = useState('2026-01-05');
  const [selectedDossier, setSelectedDossier] = useState(null);
  const [showPassword, setShowPassword] = useState(false);

  // Données d'exemple
  const [equipes] = useState([
    { id: 1, nom: 'Équipe Alpha', techniciens: ['Jean Dupont', 'Marie Martin'], dossiersAssignes: 5 },
    { id: 2, nom: 'Équipe Beta', techniciens: ['Paul Lefebvre', 'Sophie Bernard'], dossiersAssignes: 3 }
  ]);

  const [dossiers, setDossiers] = useState([
    {
      id: 'D001',
      client: 'Dupont Marie',
      adresse: '12 Rue de la Paix, 75001 Paris',
      telephone: '06 12 34 56 78',
      date: '2026-01-05',
      heure: '09:00',
      equipe: 'Équipe Alpha',
      statut: 'en_attente',
      mdpConfig: 'WF2024-XYHZ',
      typeInstallation: 'Fibre FTTH',
      images: [],
      notes: ''
    },
    {
      id: 'D002',
      client: 'Martin Jean',
      adresse: '45 Avenue des Champs, 75008 Paris',
      telephone: '06 23 45 67 89',
      date: '2026-01-05',
      heure: '11:00',
      equipe: 'Équipe Alpha',
      statut: 'en_cours',
      mdpConfig: 'WF2024-ABCD',
      typeInstallation: 'Fibre FTTH',
      images: ['pbo1.jpg', 'maison1.jpg'],
      notes: 'PBO accessible, 2ème étage'
    },
    {
      id: 'D003',
      client: 'Bernard Sophie',
      adresse: '78 Boulevard Saint-Michel, 75006 Paris',
      telephone: '06 34 56 78 90',
      date: '2026-01-05',
      heure: '14:30',
      equipe: 'Équipe Beta',
      statut: 'connexion_ok',
      mdpConfig: 'WF2024-MNOP',
      typeInstallation: 'Fibre FTTH',
      images: ['pbo2.jpg'],
      notes: 'Installation terminée avec succès'
    }
  ]);

  const getStatutColor = (statut) => {
    switch(statut) {
      case 'en_attente': return 'bg-yellow-100 text-yellow-700 border-yellow-300';
      case 'en_cours': return 'bg-blue-100 text-blue-700 border-blue-300';
      case 'connexion_ok': return 'bg-green-100 text-green-700 border-green-300';
      case 'pas_recharge': return 'bg-red-100 text-red-700 border-red-300';
      default: return 'bg-gray-100 text-gray-700 border-gray-300';
    }
  };

  const getStatutIcon = (statut) => {
    switch(statut) {
      case 'en_attente': return <Clock className="w-4 h-4" />;
      case 'en_cours': return <AlertCircle className="w-4 h-4" />;
      case 'connexion_ok': return <CheckCircle className="w-4 h-4" />;
      case 'pas_recharge': return <XCircle className="w-4 h-4" />;
      default: return <Clock className="w-4 h-4" />;
    }
  };

  const changeStatut = (id, nouveauStatut) => {
    setDossiers(dossiers.map(d => d.id === id ? { ...d, statut: nouveauStatut } : d));
  };

  const dossiersAujourdhui = dossiers.filter(d => d.date === selectedDate);
  const stats = {
    total: dossiersAujourdhui.length,
    enAttente: dossiersAujourdhui.filter(d => d.statut === 'en_attente').length,
    enCours: dossiersAujourdhui.filter(d => d.statut === 'en_cours').length,
    termines: dossiersAujourdhui.filter(d => d.statut === 'connexion_ok').length
  };

  // Vue Détail Dossier
  if (selectedDossier) {
    const dossier = dossiers.find(d => d.id === selectedDossier);
    return (
      <div className="min-h-screen bg-gray-50">
        {/* Header Detail */}
        <div className="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-4 shadow-lg">
          <div className="max-w-4xl mx-auto">
            <button 
              onClick={() => setSelectedDossier(null)}
              className="flex items-center gap-2 text-white mb-3 hover:text-indigo-100"
            >
              <ChevronLeft className="w-5 h-5" />
              Retour
            </button>
            <h2 className="text-xl font-bold">Dossier {dossier.id}</h2>
            <p className="text-indigo-100 text-sm">{dossier.client}</p>
          </div>
        </div>

        <div className="max-w-4xl mx-auto p-4 space-y-4">
          {/* Info Client */}
          <div className="bg-white rounded-xl shadow-md p-4">
            <h3 className="font-bold text-gray-800 mb-3 flex items-center gap-2">
              <Users className="w-5 h-5 text-indigo-600" />
              Informations Client
            </h3>
            <div className="space-y-2 text-sm">
              <div><span className="font-semibold">Adresse:</span> {dossier.adresse}</div>
              <div><span className="font-semibold">Téléphone:</span> {dossier.telephone}</div>
              <div><span className="font-semibold">Date:</span> {dossier.date} à {dossier.heure}</div>
              <div><span className="font-semibold">Type:</span> {dossier.typeInstallation}</div>
              <div><span className="font-semibold">Équipe:</span> {dossier.equipe}</div>
            </div>
          </div>

          {/* Mot de passe Config */}
          <div className="bg-white rounded-xl shadow-md p-4">
            <h3 className="font-bold text-gray-800 mb-3 flex items-center gap-2">
              <Lock className="w-5 h-5 text-indigo-600" />
              Mot de passe Configuration
            </h3>
            <div className="flex items-center gap-3 bg-gray-50 p-3 rounded-lg">
              <code className="flex-1 font-mono text-lg font-bold text-indigo-600">
                {showPassword ? dossier.mdpConfig : '••••••••••••'}
              </code>
              <button 
                onClick={() => setShowPassword(!showPassword)}
                className="p-2 hover:bg-gray-200 rounded-lg transition-colors"
              >
                {showPassword ? <EyeOff className="w-5 h-5" /> : <Eye className="w-5 h-5" />}
              </button>
            </div>
          </div>

          {/* Statut Installation */}
          <div className="bg-white rounded-xl shadow-md p-4">
            <h3 className="font-bold text-gray-800 mb-3 flex items-center gap-2">
              <Wifi className="w-5 h-5 text-indigo-600" />
              Statut de l'installation
            </h3>
            <div className="grid grid-cols-1 gap-3">
              <button
                onClick={() => changeStatut(dossier.id, 'en_cours')}
                className={`p-4 rounded-lg border-2 font-semibold transition-all ${
                  dossier.statut === 'en_cours' 
                    ? 'bg-blue-100 border-blue-500 text-blue-700' 
                    : 'bg-white border-gray-200 text-gray-600 hover:border-blue-300'
                }`}
              >
                <AlertCircle className="w-5 h-5 inline mr-2" />
                En cours de configuration
              </button>
              <button
                onClick={() => changeStatut(dossier.id, 'connexion_ok')}
                className={`p-4 rounded-lg border-2 font-semibold transition-all ${
                  dossier.statut === 'connexion_ok' 
                    ? 'bg-green-100 border-green-500 text-green-700' 
                    : 'bg-white border-gray-200 text-gray-600 hover:border-green-300'
                }`}
              >
                <CheckCircle className="w-5 h-5 inline mr-2" />
                Connexion OK
              </button>
              <button
                onClick={() => changeStatut(dossier.id, 'pas_recharge')}
                className={`p-4 rounded-lg border-2 font-semibold transition-all ${
                  dossier.statut === 'pas_recharge' 
                    ? 'bg-red-100 border-red-500 text-red-700' 
                    : 'bg-white border-gray-200 text-gray-600 hover:border-red-300'
                }`}
              >
                <XCircle className="w-5 h-5 inline mr-2" />
                Pas rechargé
              </button>
            </div>
          </div>

          {/* Photos PBO/Maison */}
          <div className="bg-white rounded-xl shadow-md p-4">
            <h3 className="font-bold text-gray-800 mb-3 flex items-center gap-2">
              <Camera className="w-5 h-5 text-indigo-600" />
              Photos (PBO / Maison)
            </h3>
            <div className="grid grid-cols-2 gap-3">
              {dossier.images.map((img, idx) => (
                <div key={idx} className="aspect-video bg-gray-100 rounded-lg flex items-center justify-center">
                  <Camera className="w-8 h-8 text-gray-400" />
                  <span className="ml-2 text-sm text-gray-500">{img}</span>
                </div>
              ))}
              <button className="aspect-video border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center hover:border-indigo-400 hover:bg-indigo-50 transition-colors">
                <Plus className="w-8 h-8 text-gray-400" />
                <span className="text-sm text-gray-500 mt-1">Ajouter photo</span>
              </button>
            </div>
          </div>

          {/* Notes */}
          <div className="bg-white rounded-xl shadow-md p-4">
            <h3 className="font-bold text-gray-800 mb-3">Notes</h3>
            <textarea 
              className="w-full p-3 border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-indigo-500"
              rows="4"
              placeholder="Ajouter des notes sur l'installation..."
              value={dossier.notes}
            />
          </div>
        </div>
      </div>
    );
  }

  // Vue Dashboard Principal
  return (
    <div className="min-h-screen bg-gray-50">
      {/* Header */}
      <div className="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-4 shadow-lg">
        <div className="max-w-4xl mx-auto">
          <div className="flex items-center justify-between mb-3">
            <div>
              <h1 className="text-2xl font-bold">Gestion Installations</h1>
              <p className="text-indigo-100 text-sm">
                {userRole === 'coordinateur' ? 'Coordinateur' : 'Technicien'}
              </p>
            </div>
            <button 
              onClick={() => setUserRole(userRole === 'coordinateur' ? 'technicien' : 'coordinateur')}
              className="p-2 bg-white/20 rounded-lg"
            >
              <Settings className="w-6 h-6" />
            </button>
          </div>

          {/* Navigation */}
          <div className="flex gap-2 overflow-x-auto pb-2">
            <button
              onClick={() => setCurrentView('dashboard')}
              className={`px-4 py-2 rounded-lg font-semibold whitespace-nowrap ${
                currentView === 'dashboard' ? 'bg-white text-indigo-600' : 'bg-white/20 text-white'
              }`}
            >
              <FolderOpen className="w-4 h-4 inline mr-1" />
              Dossiers
            </button>
            {userRole === 'coordinateur' && (
              <button
                onClick={() => setCurrentView('equipes')}
                className={`px-4 py-2 rounded-lg font-semibold whitespace-nowrap ${
                  currentView === 'equipes' ? 'bg-white text-indigo-600' : 'bg-white/20 text-white'
                }`}
              >
                <UserCog className="w-4 h-4 inline mr-1" />
                Équipes
              </button>
            )}
            <button
              onClick={() => setCurrentView('historique')}
              className={`px-4 py-2 rounded-lg font-semibold whitespace-nowrap ${
                currentView === 'historique' ? 'bg-white text-indigo-600' : 'bg-white/20 text-white'
              }`}
            >
              <History className="w-4 h-4 inline mr-1" />
              Historique
            </button>
          </div>
        </div>
      </div>

      {/* Vue Équipes (Coordinateur) */}
      {currentView === 'equipes' && userRole === 'coordinateur' && (
        <div className="max-w-4xl mx-auto p-4 space-y-4">
          <div className="flex justify-between items-center">
            <h2 className="text-xl font-bold text-gray-800">Gestion des Équipes</h2>
            <button className="bg-indigo-600 text-white px-4 py-2 rounded-lg font-semibold flex items-center gap-2">
              <Plus className="w-5 h-5" />
              Nouvelle Équipe
            </button>
          </div>

          {equipes.map((equipe) => (
            <div key={equipe.id} className="bg-white rounded-xl shadow-md p-4">
              <div className="flex justify-between items-start mb-3">
                <div>
                  <h3 className="font-bold text-lg text-gray-800">{equipe.nom}</h3>
                  <p className="text-sm text-gray-600">{equipe.dossiersAssignes} dossiers assignés</p>
                </div>
                <button className="text-indigo-600 hover:bg-indigo-50 p-2 rounded-lg">
                  <Plus className="w-5 h-5" />
                </button>
              </div>
              <div className="flex flex-wrap gap-2">
                {equipe.techniciens.map((tech, idx) => (
                  <span key={idx} className="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-sm font-semibold">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      )}

      {/* Vue Dossiers */}
      {currentView === 'dashboard' && (
        <>
          {/* Date Selector */}
          <div className="max-w-4xl mx-auto px-4 py-3">
            <div className="bg-white rounded-lg shadow-md p-3 flex items-center gap-3">
              <Calendar className="w-5 h-5 text-indigo-600" />
              <input 
                type="date" 
                value={selectedDate}
                onChange={(e) => setSelectedDate(e.target.value)}
                className="flex-1 outline-none text-gray-700 font-semibold"
              />
            </div>
          </div>

          {/* Stats */}
          <div className="max-w-4xl mx-auto px-4">
            <div className="grid grid-cols-4 gap-3">
              <div className="bg-white rounded-lg p-3 text-center shadow-md">
                <div className="text-2xl font-bold text-gray-800">{stats.total}</div>
                <div className="text-xs text-gray-600">Total</div>
              </div>
              <div className="bg-yellow-50 rounded-lg p-3 text-center shadow-md">
                <div className="text-2xl font-bold text-yellow-700">{stats.enAttente}</div>
                <div className="text-xs text-yellow-600">En attente</div>
              </div>
              <div className="bg-blue-50 rounded-lg p-3 text-center shadow-md">
                <div className="text-2xl font-bold text-blue-700">{stats.enCours}</div>
                <div className="text-xs text-blue-600">En cours</div>
              </div>
              <div className="bg-green-50 rounded-lg p-3 text-center shadow-md">
                <div className="text-2xl font-bold text-green-700">{stats.termines}</div>
                <div className="text-xs text-green-600">Terminés</div>
              </div>
            </div>
          </div>

          {/* Liste Dossiers */}
          <div className="max-w-4xl mx-auto p-4 space-y-3">
            {dossiersAujourdhui.map((dossier) => (
              <div 
                key={dossier.id}
                onClick={() => setSelectedDossier(dossier.id)}
                className="bg-white rounded-xl shadow-md p-4 cursor-pointer hover:shadow-lg transition-shadow"
              >
                <div className="flex justify-between items-start mb-2">
                  <div className="flex-1">
                    <div className="flex items-center gap-2 mb-1">
                      <span className="font-bold text-indigo-600">{dossier.id}</span>
                      <span className={`px-2 py-1 rounded-full text-xs font-semibold border ${getStatutColor(dossier.statut)}`}>
                        {getStatutIcon(dossier.statut)}
                      </span>
                    </div>
                    <h3 className="font-bold text-gray-800">{dossier.client}</h3>
                    <p className="text-sm text-gray-600">{dossier.adresse}</p>
                    <p className="text-sm text-gray-500 mt-1">{dossier.typeInstallation}</p>
                  </div>
                  <div className="text-right">
                    <div className="text-lg font-bold text-indigo-600">{dossier.heure}</div>
                    <div className="text-xs text-gray-500 mt-1">{dossier.equipe}</div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </>
      )}

      {/* Vue Historique */}
      {currentView === 'historique' && (
        <div className="max-w-4xl mx-auto p-4">
          <h2 className="text-xl font-bold text-gray-800 mb-4">Historique des installations</h2>
          <div className="bg-white rounded-xl shadow-md p-6 text-center text-gray-500">
            <History className="w-12 h-12 mx-auto mb-2 text-gray-400" />
            <p>Historique des dossiers terminés</p>
          </div>
        </div>
      )}
    </div>
  );
}
